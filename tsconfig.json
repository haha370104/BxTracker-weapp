{
  "compileOnSave": true,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "jsx": "react",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "build",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "types",
    "lib": [
      "ES2015",
      "es6",
      "es2015.promise"
    ]
  },
  "exclude": [
    "node_modules",
    "examples",
    "types",
    "test"
  ]
}
